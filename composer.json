{
    "name": "sylius/shipping-bundle",
    "type": "symfony-bundle",
    "description": "Flexible shipping system for Symfony2 ecommerce applications.",
    "keywords": ["shipping", "delivery", "shipments", "shop", "webshop", "ecommerce", "sylius"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "stof/doctrine-extensions-bundle": "~1.1",
        "sylius/shipping": "dev-symfony_3_compatibility",
        "sylius/money-bundle": "dev-symfony_3_compatibility",
        "sylius/resource-bundle": "dev-symfony_3_compatibility",
        "symfony/framework-bundle": "^3.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4",
        "symfony/form": "^3.0",
        "symfony/validator": "^3.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\ShippingBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Bundle\\ShippingBundle\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.19-dev"
        }
    }
}
